    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center">Sign Up</h3>
                    {{ form_start(form) }}
                    <p>Username </p>
                    <span class="error">{{ form_errors(form.username) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        {{ form_widget(form.username, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Email</p>
                    <span class="error">{{ form_errors(form.email) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        {{ form_widget(form.email, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Password</p>
                    <span class="error">{{ form_errors(form.plainPassword.first) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Password verify</p>
                    <span class="error">{{ form_errors(form.plainPassword.second) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group form-float">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            {{ form_widget(form.termsAccepted, {'attr': {'class': 'custom-control-input'} }) }}
                            <label class="custom-control-label" for="user_termsAccepted"><a href="#" data-toggle="modal" data-target="#conditionsModal">{{ 'conditions_accepted'|trans }}</a></label>
                        </div>
                    </div>
                    <button type="submit"
                            class="btn btn-primary px-4">{{ 'register'|trans }}</button>
                    {{ form_end(form) }}
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                       <span style="color: grey;">Already have an account?</span> <a href="{{ path('rd_authentication_login') }}">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
