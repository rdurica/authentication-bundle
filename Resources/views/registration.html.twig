{% extends '@RdAuthentication/layout.html.twig' %}
{% block title %}Registration{% endblock %}
{% block body %}
    <style>
        html, body {
            background-image: url({{ background }});
        }
        .card {
            height: 630px;
            margin-top: auto;
            margin-bottom: auto;
            width: 450px;
            /*background-color: rgba(0, 0, 0, 0.5) !important;*/
        }

        .modal-content {
            /*height: 630px;*/
            /*margin-top: auto;*/
            /*margin-bottom: auto;*/
            /*margin: auto;*/
            /*width: 700px;*/
            /*background-color: rgba(0, 0, 0, 0.7) !important;*/
            color: grey;
        }
    </style>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center">Sign Up</h3>
                    {{ form_start(form) }}
                    <p>Username </p>
                    <span class="error">{{ form_errors(form.username) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        {{ form_widget(form.username, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Email</p>
                    <span class="error">{{ form_errors(form.email) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        {{ form_widget(form.email, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Password</p>
                    <span class="error">{{ form_errors(form.plainPassword.first) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class' : 'form-control'}}) }}

                    </div>
                    <p>Password verify</p>
                    <span class="error">{{ form_errors(form.plainPassword.second) }}</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group form-float">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            {{ form_widget(form.termsAccepted, {'attr': {'class': 'custom-control-input'} }) }}
                            <label class="custom-control-label" for="user_termsAccepted"><a href="#" data-toggle="modal"
                                                                                            data-target="#conditionsModal">Accept
                                    conditions</a></label>
                        </div>
                    </div>
                    <button type="submit"
                            class="btn btn-primary px-4">Create account
                    </button>
                    {{ form_end(form) }}
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        <span style="color: grey;">Already have an account?</span> <a
                                href="{{ path('rd_authentication_login') }}">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade bd-example-modal-lg" id="conditionsModal" tabindex="-1" role="dialog"
             aria-labelledby="conditionsModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h5 class="text-center">Conditions</h5><br>
                        {% if conditions %}
                            {{ conditions.text|raw }}<br>
                        {% endif %}
                        <div class="center-block">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
